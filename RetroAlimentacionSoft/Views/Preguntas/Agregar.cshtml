@model RetroAlimentacionSoft.Models.utilidades.VistaAplicacion
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-5 col-md-3" >
        <p>Agregar pregunta</p>
    </div>
</div>

@using (Html.BeginForm("AgregarDatos", "Preguntas", FormMethod.Get, new { @id = "frn" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">

        <div class="col-md-offset-3 col-md-1">
            <label>Aplicación</label>
        </div>
        <div class="col-md-3">
            @Html.DropDownListFor(m => m.sofware, new SelectList(Model.sofware, "Sigla", "NombreSoftware"), "Selecciona", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.sofware, "", new { @class = "text-danger" })
        </div>
        
        
        @*<div class="col-md-1">
                <input type="submit" value="enivar" class="btn btn-primary"  />
            </div>*@
    </div>
    <br />
    <div class="row">
        <div class="col-md-1">            
            <label>Pregunta</label>            
        </div>
  

        <div class="col-md-11">
            @Html.TextBox("Preguntass", "", new { @class="form-control"})
        </div>
    </div>

    <br />
    
    <div class="row">
        <div class=" col-md-offset-5 col-md-4">
            <input type="submit" value="enivar" class="btn btn-primary" />
        </div>
    </div>


}


