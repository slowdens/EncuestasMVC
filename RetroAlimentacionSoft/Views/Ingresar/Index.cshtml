
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>   


 
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/login")
    @Styles.Render("~/logins/css")
    
 
</head>
<body>
    <div class="contenedor">
        <div class="contenedormenu">
            <img id="imglogo" src="~/imagenes/Logotipo.png">
            
        </div>
        <div class="trabajoarea">
            <form method="post">
                <div class="cajalogin">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="text" class="form-control" placeholder="Nómina" id="txtUsuario" name="nomina" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <input type="password" class="form-control" placeholder="Contrase&#241;a" id="txtpass" name="pass" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-lg" id="btnlogin" value="Entrar">
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            var alto = $(window).height();
            //console.log("el alto de la ventana es " + $(window).height());
            $(".contenedor").css("height",alto+"px");
        });

    </script>
    
</body>

</html>
