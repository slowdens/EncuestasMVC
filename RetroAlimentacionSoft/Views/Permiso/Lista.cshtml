<div class="row">

    <div class="col-md-12">
        
        <table id="example" class="display" width="100%" ellspacing="0">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Link</th>
                    <th>Rol</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Nombre</th>
                    <th>Link</th>
                    <th>Rol</th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr id="ids-@s.Id_menu_rol">
